{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Bibliothèque{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

        <div class="card" >
            <div class="card-body" >
                <h5 class="card-title">Filtre</h5>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        Dropdown
                    </button>

                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        {% for article in articles %}
                            <li><a class="dropdown-item" href="#">{{article.title}} </a></li>
                        {% endfor %}
                    </ul>
                    
                </div>
            </div>
        </div>



            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
            <div class="collapse navbar-collapse" id="navbarNav">

                <div class="row" >
                    {% for article in articles %}
                        <div class="col-md-3"  >
                            <div class="card"  >
                                <div class="col-md-12">
                                    <img src={{article.img}} class="card-img-top" style="height: 200px;" alt="Article Image">
                                </div>
                                <div class="card-body"  >
                                    <h5 class="card-title">{{article.title}}</h5>
                                    
                                    <span class="card-categorie">{{article.categorie}}</span>
                                    <p class="card-text">{{article.description}}</p>
                                    <button class="btn btn-danger">Delete</button>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <li> <a href = "http://127.0.0.1:8000/commercants"> Lien page commercant </a> </li>



            
   




       

    </nav>
    <div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Shopping Cart</h2>
            <ul class="list-group">
                <li class="list-group-item">Item 1</li>
                <li class="list-group-item">Item 2</li>
                <li class="list-group-item">Item 3</li>
            </ul>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Cart Summary</h5>
                    <p class="card-text">Total: $100</p>
                    <a href="#" class="btn btn-primary">Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>

    <div class="container my-4">
        {% block body %}{% endblock %}
    </div>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">© 2024 Amazon</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>